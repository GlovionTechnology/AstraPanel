# ========================================
# AstraPanel Environment Variables
# ⚠️  DO NOT COMMIT THIS FILE TO GITHUB!
# This is just a template. Copy to .env
# ========================================

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Secret (Auto-generated by install.sh on VPS)
# For local dev, generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_RANDOM_SECRET_KEY

# Database
DB_PATH=./config/astrapanel.db

# Admin Default Credentials (First Time Setup)
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# Hosting Paths
SITES_DIR=./hosted_sites

# Security
BCRYPT_ROUNDS=10

# Backup Settings
BACKUP_RETENTION_DAYS=7
AUTO_BACKUP_ENABLED=true
